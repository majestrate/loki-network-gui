{
  "appId": "com.electron.lokinet.gui",
  "directories": {
    "output": "release/"
  },
  "asar": true,
  "mac": {
    "target": "mas",
    "type": "development",
    "hardenedRuntime": false,
    "category": "public.app-category.utilities",
    "entitlementsInherit": "./external/lokinet/contrib/macos/lokinet-extension.entitlements.plist",
    "provisioningProfile": "./external/lokinet/contrib/macos/lokinet-extension.provisionprofile",
    "extraFiles": [
      {
        "from": "./external/lokinet/build-mac/daemon/lokinet.app/Contents/Plugins",
        "to": "Plugins"
      },
      {
        "from": "./external/lokinet/build-mac/daemon/lokinet.app/Contents/MacOS",
        "to": "MacOS"
      }
    ],
    "binaries": [
      "./release/mas/Lokinet-GUI.app/Contents/Plugins/lokinet-extension.appex",
      "./release/mas/Lokinet-GUI.app/Contents/MacOS/lokinet"
    ]
  },
  "win": {
    "target": ["portable"]
  },
  "portable": {
    "artifactName": "LOKINET-GUI_portable.exe",
    "requestExecutionLevel": "admin"
  },
  "linux": {
    "target": ["deb"]
  },
  "deb": {
    "afterInstall": "build-scripts/deb-postinstall.sh"
  },
  "files": [
    "dist/**/*",
    "dist/*",
    "build-scripts/*",
    "icons/*",
    "fonts/*",
    "images/*",
    "js/main.js"
  ]
}
